diff --git a/arch/x86/boot/compressed/tb_stub.S b/arch/x86/boot/compressed/tb_stub.S
new file mode 100644
index 0000000..b200007
--- /dev/null
+++ b/arch/x86/boot/compressed/tb_stub.S
@@ -0,0 +1,110 @@
+	.code32
+	.text
+#include <linux/init.h>
+#include <linux/linkage.h>
+#include <asm/segment.h>
+#include <asm/boot.h>
+#include <asm/msr.h>
+#include <asm/processor-flags.h>
+#include <asm/asm-offsets.h>
+#include <asm/bootparam.h>
+#include "tb_stub.h"
+
+	.code32
+ENTRY(tb_stub)
+	cli
+	cld
+
+	/*
+	 * %ebp has old base address from head_BITS.S. Need to figure out
+	 * where we are now. Already have a stack so use a call.
+	 */
+	call	1f
+1:	popl	%ebp
+	subl	$1b, %ebp
+
+	/* On entry, only %cs is known good */
+	addl	%ebp, (tb_gdt + 2)(%ebp)
+	lgdt	tb_gdt(%ebp)
+
+	movl	$(__TB32_DS), %eax
+	movl	%eax, %ds
+	movl	%eax, %es
+	movl	%eax, %fs
+	movl	%eax, %gs
+	movl	%eax, %ss
+
+	leal	.Ltb_cs(%ebp), %eax
+	pushl	$(__TB32_CS)
+	pushl	%eax
+	lret
+
+.Ltb_cs:
+	/* Assume CPU is AMD to start */
+	movl	$(CPU_AMD), %edi
+
+	/* Now see if it is Intel */
+	movl	$0x0, %eax
+	cpuid
+	cmpl	$0x756e6547, %ebx # GenuineIntel?
+	jnz	.Lcpu_check_done
+	cmpl	$0x49656e69, %edx
+	jnz	.Lcpu_check_done
+	cmpl	$0x6c65746e, %ecx
+	jnz	.Lcpu_check_done
+	movl	$(CPU_INTEL), %edi
+
+.Lcpu_check_done:
+	/* Now that we know what CPU it is, enable SMI etc */
+	cmpl	$(CPU_AMD), %edi
+	jnz	.Ldo_amd
+
+	/* Enable SMI with GETSET[SMCTRL] */
+	xorl	%ebx, %ebx
+	movl	$(X86_GETSEC_SMCTRL), %eax
+	.byte 	0x0f, 0x37 /* GETSEC opcode */
+
+	/* An IRET-to-self can be used to unmask NMIs which SENTER masked */
+	leal	.Lunmask_nmi(%ebp), %eax
+	pushfl
+	pushl	$(__TB32_CS)
+	pushl	%eax
+	iret
+.Lunmask_nmi:
+
+	jmp	.Ldone_intel
+
+.Ldo_amd:
+	/*
+	 * Enable global interrupts including SMI and NMI, then disable
+	 * all others.
+	 */
+	stgi
+	cli
+
+.Ldone_intel:
+	/* Enable MCE */
+	movl	%cr4, %eax
+	orl	$(X86_CR4_MCE), %eax
+	movl	%eax, %cr4
+
+	/* Call the main routine to do the rest */
+	pushl	%edi
+	pushl	%esi
+	call	tb_main
+	movl	%eax, %esi
+	addl	$8, %esp
+
+	/* Done, jump to normal 32b pm entry */
+	movl	BP_code32_start(%esi), %eax
+	leal	startup_32(%eax), %eax
+	jmp	*%eax
+ENDPROC(tb_stub)
+
+tb_gdt:
+	.word	tb_gdt_end - tb_gdt
+	.long	tb_gdt
+	.word	0
+	.quad	0x00cf9a000000ffff	/* __TB32_CS */
+	.quad	0x00cf92000000ffff	/* __TB32_DS */
+tb_gdt_end:
diff --git a/arch/x86/boot/compressed/tb_stub.h b/arch/x86/boot/compressed/tb_stub.h
new file mode 100644
index 0000000..0b2ff89
--- /dev/null
+++ b/arch/x86/boot/compressed/tb_stub.h
@@ -0,0 +1,13 @@
+#ifndef BOOT_COMPRESSED_TRENCHBOOT_H
+#define BOOT_COMPRESSED_TRENCHEBOOT_H
+
+#define __TB32_CS 0x0008
+#define __TB32_DS 0x0010
+
+#define CPU_AMD   1
+#define CPU_INTEL 2
+
+#define X86_GETSEC_SMCTRL 7
+
+
+#endif /* BOOT_COMPRESSED_TRENCHBOOT_H */
